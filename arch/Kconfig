choice ARCH
    prompt "Architecture Select"
    default ARCH_X86

config ARCH_ALPHA
    bool "Alpha"
    select ARCH_32BIT
    select ARCH_HAS_MMU
    
config ARCH_ARM
    bool "ARM"
    select ARCH_32BIT
    select ARCH_HAS_MMU

config ARCH_ARM64
    bool "ARM64"
    select ARCH_64BIT
    select ARCH_HAS_MMU

config ARCH_ARME
    bool "ARM-Embedded"
    select ARCH_32BIT
    select ARCH_HAS_NOMMU
    select ARCH_HAS_XIP

config ARCH_CSKY
    bool "C-SKY"
    select BOOT_HAS_MAP
    select ARCH_32BIT       
    select ARCH_HAS_MMU

config ARCH_M68K
    bool "M68k"
    select ARCH_32BIT
    select ARCH_HAS_MMU
    
config ARCH_MIPS
    bool "MIPS"

config ARCH_RISCV
    bool "RISC-V"
    select ARCH_32BIT
    select ARCH_HAS_MMU

config ARCH_RISCV64
    bool "RISC-V64"
    select ARCH_64BIT
    select ARCH_HAS_MMU
        
config ARCH_X86
    bool "X86"
    select ARCH_32BIT
    select ARCH_HAS_MMU
    select ARCH_HAS_PRE_PRINTK
    select ARCH_HAS_DMA
    select ARCH_HAS_HIMEM
    select CPU_LITTLE_ENDIAN

config ARCH_X86_64
    bool "X86_64"
    select ARCH_64BIT
    select ARCH_HAS_MMU
    select ARCH_HAS_PRE_PRINTK
    select ARCH_HAS_DMA
    select ARCH_HAS_DMA32
    select ARCH_HAS_HIMEM
    select CPU_LITTLE_ENDIAN

config ARCH_XTENSA
    bool "Xtensa"
    select ARCH_32BIT
        
endchoice

source "arch/arm/Kconfig"
source "arch/arme/Kconfig"
source "arch/csky/Kconfig"
source "arch/x86/Kconfig"
source "arch/xtensa/Kconfig"

# CPU wide
config ARCH_32BIT
    bool
config ARCH_64BIT
    bool

# Endianness
config CPU_LITTLE_ENDIAN
    bool
config CPU_BIG_ENDIAN
    bool
    
# Mem manage
config ARCH_HAS_MMU
    bool
config ARCH_HAS_NOMMU
    bool
config ARCH_HAS_XIP
    bool
    
config ARCH_HAS_DMA
    bool
config ARCH_HAS_DMA32
    bool
config ARCH_HAS_HIMEM
    bool

# Arch pre printk
config ARCH_HAS_PRE_PRINTK
    bool
