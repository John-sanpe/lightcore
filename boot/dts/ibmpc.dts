/dts-v1/;

/ {
    model = "X86 IBM compatible computer";
    #address-cells = <1>;
    #size-cells = <1>;
    interrupt-parent = <&pic>;

    isa {
        compatible = "isa-bus";
        #address-cells = <1>;
        #size-cells = <1>;
        ranges;
    
        pic: interrupt-controller@20 {
            compatible = "i8259";
            #interrupt-cells = <1>;
            #address-cells = <0>;
            interrupt-controller;
            reg = <0x0020 2>, <0x00a0 2>;
        };
        
        pit: timer@42 {
            compatible = "i8253";
            reg = <0x0042 4>;
            interrupts = <0>;
        };
        
        uart0: serial@3f8 {
            compatible = "i8250";
            reg = <0x03f8 8>;
            interrupts = <4>;
        };
        
        pci@c00 {
            compatible = "i386-pci";
            reg = <0x0c00 16>;
        };
    };
    
    chosen {
        bootargs = "console=tty0";
    };
}; 
