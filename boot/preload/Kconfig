menuconfig PRELOAD
    bool "Builtin preload(Replace bootloader)"
if PRELOAD

choice
    prompt "Chip platform selection"

config CHIP_SUNIV
    depends on ARCH_ARM
    bool "Allwinner F-series SoCs support"

config CHIP_RK3399
    depends on ARCH_ARM64
    bool "Rockchip RK3399 support"
    
config CHIP_X86
    depends on ARCH_X86
    bool "X86"

config CHIP_ESP32
    depends on ARCH_XTENSA
    bool "esp32"
            
config CHIP_ESP8266
    depends on ARCH_XTENSA
    bool "esp8266"
            
endchoice

source "boot/preload/suniv/Kconfig"    
source "boot/preload/bios/Kconfig"

endif
