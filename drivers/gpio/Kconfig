menuconfig GPIO
    bool "General Purpose Input/Output (GPIO) Support"
if GPIO

config GPIO_DT
    bool "GPIO Device Tree Linkage"
    depends on DT
    default y

config GPIO_GENERIC
    bool "Generic GPIO Support"
    depends on DT

config GPIO_PARALLEL
    bool "Parallel GPIO Bridge"
    depends on PARALLEL && DT

endif
