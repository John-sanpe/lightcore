menu "Scheduler Config"

config SCHED_FIFO
    bool "FIFO Scheduler Support"

config SCHED_DEADLINE
    bool "Deadline Scheduler Support"

choice
    prompt "Default Scheduler Choice"
    default SCHED_DEF_RR

config SCHED_DEF_RR
    bool "Use RR as Default Scheduler"

config SCHED_DEF_FIFO
    bool "Use FIFO as Default Scheduler"
    depends on SCHED_FIFO

config SCHED_DEF_DEADLINE
    bool "Use Deadline as Default Scheduler"
    depends on SCHED_DEADLINE

endchoice

endmenu
