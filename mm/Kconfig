menu "Memory Management options"
comment "Architecture has no MMU"
depends on !ARCH_HAS_MMU

config MMU
    bool "MMU-based Paged Memory Management Support"
    depends on ARCH_HAS_MMU
    default y
    help
        Select if you want MMU-based virtualised addressing space
        support by paged memory management. If unsure, say 'Y'.

config RAM_BASE
    hex "RAM Offset"
    default 0
    help
        Start address of physical memory

config RAM_PAD
    hex "RAM Pad Size"
    depends on MMU
    default 0
    help
        Memory pad for special memory model

choice
    prompt "Memory Model"
    default SPARCEMEM

config FLATMEM
    bool "Flat Memory Model"

config SPARCEMEM
    bool "Sparce Memory Model"

endchoice

menu "Memory Region"

config REGION_DMA
    bool "DMA Region"

config DMA_SIZE
    hex "DMA Region Size"
    depends on REGION_DMA

config REGION_DMA32
    bool "DMA32 Region"
    depends on REGION_DMA

config DMA32_SIZE
    hex "DMA32 Region Size"
    depends on REGION_DMA32

config REGION_HIMEM
    bool "HIMEM Region"
    depends on MMU
    help
        If direct mapping cannot access all memory, turn on
        the high-end memory option

config HIGHMEM_OFFSET
    hex "HIMEM Offset"
    depends on REGION_HIMEM

endmenu

config XIP
    bool "Execute-In-Place from ROM"
    depends on ARCH_HAS_XIP

config XIP_BASE
    hex "Xip PHYSADDR(ROM)"
    depends on XIP

config PAGE_OFFSET
    hex "Kernel Offset"

config HIGHMAP_OFFSET
    hex "Hige Memory Offset"
    depends on REGION_HIMEM
    help
        The virtual address to which the high-end memory
        will be mapped

choice
    prompt "Kmem allocator select"
    default MM_SLOB

config MM_SLAB
    bool "SLAB"

config MM_SLOB
    bool "SLOB (Simple SLAB)"

endchoice

menu "Slob Config"
    depends on MM_SLOB

config SLOB_HUGE_LINE
    int "Large page boundary (byte)"
    default 1024

config SLOB_MEDIUM_LINE
    int "Medium page boundary (byte)"
    default 256

endmenu

config MEMTEST
    bool "Memory Test Support"

endmenu

config PGTABLE_LEVEL5
    bool

config PGTABLE_LEVEL4
    bool

config PGTABLE_LEVEL3
    bool

config PGTABLE_LEVEL
    int
    default 5 if X86_5LEVEL
    default 4 if X86_64
    default 3 if X86_PAE
    default 2
